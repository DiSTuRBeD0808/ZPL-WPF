<Window x:Name="ZPL_Printer" x:Class="ZPL_Printer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZPL_Printer"
        mc:Ignorable="d"
        Title="ZPL Printer" Height="396.983" Width="382.707">
    <TabControl Margin="0,0,2,6">
        <TabItem Header="Stock GR">
            <Grid Background="#FFE5E5E5" Margin="0,0,0,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="33*"/>
                    <ColumnDefinition Width="152*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="matDocField" Height="21" Margin="84,50,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="MatDoc_TextChanged"/>
                <TextBox x:Name="lineItemField" Height="21" Margin="84,90,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="LineItem_TextChanged"/>
                <TextBox x:Name="matNoField" Height="21" Margin="84,130,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="MatNo_TextChanged"/>
                <TextBox x:Name="matDescField" Height="21" Margin="84,170,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="SerialNumber_TextChanged"/>
