                <Label x:Name="lineItemLabel" Content="Line Item" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,85,0,0" Grid.ColumnSpan="2" Width="126" Grid.Column="1" Height="26"/>
                <Label x:Name="matNoLabel" Content="Material Number" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,125,0,0" Grid.ColumnSpan="2" Width="126" Grid.Column="1" Height="26"/>
                <Label x:Name="matDescLabel" Content="Material Description" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,165,0,0" Grid.ColumnSpan="2" Width="126" Grid.Column="1" Height="26"/>
                <CheckBox x:Name="isSerialized" Content="Serialized?" Grid.Column="2" Margin="153,259,34,44" Click="IsSerialized_Checked"/>
                <Button x:Name="Print" Content="Print" HorizontalAlignment="Left" Margin="14,289,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="Print_Click" Grid.Column="1" Height="20"/>
                <Label x:Name="serialNoLabel" Content="Serial Number" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,205,0,0" Grid.ColumnSpan="2" Width="126" Grid.Column="1" Height="26"/>
                <TextBox x:Name="serialNoField" Height="21" Margin="84,210,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="SerialNumber_TextChanged" IsEnabled="False"/>
                <TextBox x:Name="quantityField" HorizontalAlignment="Left" Height="23" Margin="54,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" TextChanged="Qty_TextChanged" Grid.ColumnSpan="2" Grid.Column="1"/>
                <Label x:Name="serialNoLabel_Copy" Content="Qty:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,248,0,0" Width="54" Grid.Column="1" Height="26"/>
                <TextBox x:Name="ipAddressField" Grid.Column="2" Height="23" Margin="84,13,116,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" TextChanged="ipAddressField_TextChanged"/>
                <Label x:Name="ipAddressLabel" Content="IP Address:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="157" FontWeight="Bold" Grid.Column="1" Height="26"/>
            </Grid>
        </TabItem>
        <TabItem Header="NonStock">
            <Grid Background="#FFE5E5E5" Margin="0,0,0,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="33*"/>
                    <ColumnDefinition Width="152*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="NSmatDocField" Height="21" Margin="84,50,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="MatDoc_TextChanged"/>
                <TextBox x:Name="NSlineItemField" Height="21" Margin="84,90,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="LineItem_TextChanged"/>
                <TextBox x:Name="NSmatNoField" Height="21" Margin="84,130,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="MatNo_TextChanged"/>
                <TextBox x:Name="NSmatDescField" Height="21" Margin="84,170,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="SerialNumber_TextChanged"/>
                <Label x:Name="NSmatDocLabel" Content="Material Document" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,45,0,0" Grid.ColumnSpan="2" Width="126" Grid.Column="1" Height="26"/>
                <Label x:Name="NSlineItemLabel" Content="Line Item" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,85,0,0" Grid.ColumnSpan="2" Width="126" Grid.Column="1" Height="26"/>
                <Label x:Name="NSmatNoLabel" Content="Material Number" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,125,0,0" Grid.ColumnSpan="2" Width="126" Grid.Column="1" Height="26"/>
                <Label x:Name="NSmatDescLabel" Content="Material Description" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,165,0,0" Grid.ColumnSpan="2" Width="126" Grid.Column="1" Height="26"/>
                <CheckBox x:Name="NSisSerialized" Content="Serialized?" Grid.Column="2" Margin="153,259,34,44" Click="IsSerialized_Checked"/>
                <Button x:Name="NSPrint" Content="Print" HorizontalAlignment="Left" Margin="14,289,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="NSPrint_Click" Grid.Column="1" Height="20"/>
                <Label x:Name="NSserialNoLabel" Content="Serial Number" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,205,0,0" Grid.ColumnSpan="2" Width="126" Grid.Column="1" Height="26"/>
                <TextBox x:Name="NSserialNoField" Height="21" Margin="84,210,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" TextChanged="SerialNumber_TextChanged" IsEnabled="False"/>
                <TextBox x:Name="NSquantityField" HorizontalAlignment="Left" Height="23" Margin="54,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" TextChanged="Qty_TextChanged" Grid.ColumnSpan="2" Grid.Column="1"/>
                <Label x:Name="NSserialNoLabel_Copy" Content="Qty:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,248,0,0" Width="54" Grid.Column="1" Height="26"/>
                <TextBox x:Name="NSipAddressField" Grid.Column="2" Height="23" Margin="84,13,116,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="ipAddressField_TextChanged" Text="127.0.0.1"/>
